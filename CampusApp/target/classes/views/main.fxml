<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="campusapp.controllers.MainController">

    <top>
        <Label text="Campus Events"
               style="-fx-font-size: 26px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <ListView fx:id="eventList"/>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Add Event" onAction="#addEvent"/>
            <Button text="View Details" onAction="#viewDetails"/>
            <Button text="Delete Event" onAction="#deleteEvent"/>
        </HBox>
    </bottom>

</BorderPane>


