<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="campusapp.controllers.LoginController"
      alignment="CENTER" spacing="15">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Campus Events Login" style="-fx-font-size: 24px;"/>

    <TextField fx:id="nameField" promptText="Enter your name" maxWidth="250"/>

    <TextField fx:id="idField" promptText="Enter your 850 number" maxWidth="250"/>

    <Label fx:id="errorLabel" textFill="red"/>

    <Button text="Login" onAction="#loginPressed" maxWidth="150"/>

</VBox>

